<%= simple_form_for [current_user.company, @task] do |f| %>
  <div class="two-column-row">
    <div>
      <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@task.errors.count, "error") %>
            prohibited this task from being saved:
          </h2>
          <ul>
            <% @task.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.input :title, label: "I need help with..." %>
      </div>
      <div class="field">
        <%= f.input :description, label: "Additional Details" %>
      </div>

      <div class="field">
        <%= f.input :category_id,
          collection: current_company.categories %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
