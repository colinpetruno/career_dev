var $table = $("#tasks-table");

$table.find("tr:gt(0)").remove();

<% @tasks.each do |task| %>
  $table.
    append("<tr><td><%= task.title %></td><td><%= task.created_at %></td></tr>");
<% end %>

$("#task-table-pagination").html('<%=
  escape_javascript(
    paginate(@tasks,
      remote: true,
      params: {controller: 'tasks', action: 'index'}
    )
  )
%>');
