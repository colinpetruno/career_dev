<div>
  <h3>Interested Users</h3>
  <% if @task.offers.not_accepted.present? %>
    <table class="table">
      <% @task.offers.not_accepted.each do |offer| %>
        <tr>
          <th><%= "#{offer.user.first_name} #{offer.user.last_name}" %></th>
          <th>
            <%= form_for [@task, @task.offer_for(offer.user)] do |f| %>
              <%= f.hidden_field :accepted, value: true %>
              <%= f.submit "Accept", class: "btn btn-success" %>
            <% end %>
          </th>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p class="text-warning">No one is interested.
    Consider Upping the points</p>
  <% end %>

  <h3>Accepted Users</h3>
  <% if @task.offers.accepted.present? %>
    <table class="table">
      <% @task.offers.accepted.each do |offer| %>
        <tr>
          <th><%= "#{offer.user.first_name} #{offer.user.last_name}" %></th>
          <th>
            <%= form_for [@task, @task.offer_for(offer.user)] do |f| %>
              <%= f.hidden_field :approved, value: true %>
              <%= f.submit "Approve", class: "btn btn-success" %>
            <% end %>
          </th>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p class="text-warning">No Users Currently Accepted. Send an email asking for help..</p>
  <% end %>

  <h3>Approved</h3>
  <% if @task.offers.approved.present? %>
    <table class="table">
      <% @task.offers.approved.each do |offer| %>
        <tr>
          <th><%= "#{offer.user.first_name} #{offer.user.last_name}" %></th>
          <th>
            <p class="text-success">
              Approved on <%= @task.offer_for(offer.user).created_at %>
            </p>
          </th>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p class="text-warning">No one has been approved yet</p>
  <% end %>
</div>
