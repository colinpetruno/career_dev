<section>
  <div>
    <div class="two-column-row">
      <div>

        <h3><%= @task.title %></h3>

        <h4>Category <small><%= @task.category %></small></h4>
        <br>
        <p><%= @task.description %></p>


        <p><strong>Fun Factor</strong></p>
        <p><%= @task.fun_factor %></p>

        <p><strong>Difficulty</strong></p>
        <p><%= @task.difficulty %></p>

        <p><strong>Size</strong></p>
        <p><%= @task.size %></p>

        <p><strong>Points</strong></p>
        <p><%= @task.points %></p>

        <%=
          link_to "Edit",
            edit_admin_task_path(@task),
            class: "btn btn-primary"
        %>
      </div>
      <div>
        <h3>Interested Users</h3>
        <% if @task.unaccepted_offers.present? %>
          <table class="table">
            <% @task.unaccepted_offers.each do |user| %>
              <tr>
                <th><%= "#{user.first_name} #{user.last_name}" %></th>
                <th>
                  <%= form_for [:admin, @task, @task.offer_for(current_user)] do |f| %>
                    <%= f.hidden_field :accepted, value: true %>
                    <%= f.submit "Accept", class: "btn btn-success" %>
                  <% end %>
                </th>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p class="text-warning">No one is interested.
          Consider Upping the points</p>
        <% end %>

        <h3>Accepted Users</h3>
        <% if @task.accepted_offers.present? %>
          <table class="table">
            <% @task.accepted_offers.each do |user| %>
              <tr>
                <th><%= user.name %></th>
                <th>
                  <%= form_for [:admin, @task, @task.offer_for(current_user)] do |f| %>
                    <%= f.hidden_field :approved, value: true %>
                    <%= f.submit "Approve", class: "btn btn-success" %>
                  <% end %>
                </th>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p class="text-warning">No Users Currently Accepted. Send an email asking for help..</p>
        <% end %>

        <h3>Approved</h3>
        <% if @task.approved_offers.present? %>
          <table class="table">
            <% @task.approved_offers.each do |user| %>
              <tr>
                <th><%= user.name %></th>
                <th>
                  <p class="text-success">Approved on <%= @task.offer_for(current_user).created_at %></p>
                </th>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p class="text-warning">No one has been approved yet</p>
        <% end %>
      </div>
    </div>
</div>
</section>

