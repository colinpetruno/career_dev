<%= form_for [current_user.company, @task] do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :difficulty %>
    <%= f.select :difficulty, options_for_select((1..5), 3) %>
  </div>
  <div class="field">
    <%= f.label :fun_factor %><br />
    <%= f.select :fun_factor, options_for_select((1..5), 3) %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.select :size, options_for_select((1..5), 3) %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, options_from_collection_for_select(
          current_company.categories, :id, :name
        ),
        include_blank: true
    %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
