<div class="four-column-row">

  <% (@plans || BillingPlan.active).each do |plan| %>
    <div class="pricing-section <%= "recommended" if active_plan?(plan) %>">
      <% if active_plan?(plan) %>
        <div class="featured">
          <strong>Selected</strong>
        </div>
      <% elsif plan.featured? %>
        <div class="featured">
          <strong>Most Popular</strong>
        </div>
      <% end %>
      <div class="pricing-section-details">
        <div class="price">
          <h4><%= plan.name %></h4>
          <em>$<%= plan.monthly_cost %></em><br>
          /month
        </div>
        <%= plan.tasks %> tasks
        <div>
          <br><br>
          <% if params[:controller] != "welcome" %>
            <%= form_for [current_company, Payment.change_plan(current_company, plan)] do |f| %>
              <%= f.hidden_field :funding_instrument_id %>
              <%= f.hidden_field :billing_plan_id %>
              <%= f.hidden_field :amount_in_cents %>
              <%= f.submit "Select", disabled: active_plan?(plan) %>
            <% end %>
          <% else %>
            <button>Get Started</button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

</div>
